
// tsconfig.json

{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  // "include": [
  //   "src"
  // ]
  "include": ["src/**/*.ts", "tests/**/*.ts", "src/index.tsx", "src/utils/cookie.jsx"],
  "exclude": ["node_modules", ".vscode"],
  "types": ["uuid", "@types/css-modules"]


}